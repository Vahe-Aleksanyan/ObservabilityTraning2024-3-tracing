<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://nlog.github.io/schemas/nlog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
        <target name="logfile" xsi:type="File" fileName="logs/app.log" layout="${longdate} ${level} ${message} ${exception}" />
        <target name="logconsole" xsi:type="Console" layout="${longdate} ${level} ${message} ${exception}" />
    </targets>
    <rules>
        <logger name="*" minlevel="Trace" writeTo="logfile,logconsole" />
    </rules>
</nlog>